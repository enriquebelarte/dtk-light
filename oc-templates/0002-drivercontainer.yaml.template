apiVersion: v1
kind: ServiceAccount
metadata:
  name: DRIVER_NAME-driver-container
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: DRIVER_NAME-driver-container
rules:
- apiGroups:
  - security.openshift.io
  resources:
  - securitycontextconstraints
  verbs:
  - use
  resourceNames:
  - privileged
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: DRIVER_NAME-driver-container
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: DRIVER_NAME-driver-container
subjects:
- kind: ServiceAccount
  name: DRIVER_NAME-driver-container
userNames:
- system:serviceaccount:DRIVER_NAME-demo:DRIVER_NAME-driver-container
---
apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: DRIVER_NAME-driver-container
spec:
  selector:
    matchLabels:
      app: DRIVER_NAME-driver-container
  template:
    metadata:
      labels:
        app: DRIVER_NAME-driver-container
    spec:
      serviceAccount: DRIVER_NAME-driver-container
      serviceAccountName: DRIVER_NAME-driver-container
      containers:
      - image: image-registry.openshift-image-registry.svc:5000/DRIVER_NAME-demo/DRIVER_NAME-driver-container:demo
        name: DRIVER_NAME-driver-container
        imagePullPolicy: Always
        command: ["/sbin/init"]
        lifecycle:
          preStop:
            exec:
              command: ["/bin/sh", "-c", "rmmod DRIVER_NAME"]

        securityContext:
          privileged: true
      nodeSelector:
        node-role.kubernetes.io/worker: ""
