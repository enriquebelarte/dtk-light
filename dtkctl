#!/bin/bash
# Config variables
OCP_VERSION=$(oc get clusterversion/version -ojsonpath={.status.desired.version})
DRIVER_TOOLKIT_IMAGE=$(oc adm release info $OCP_VERSION --image-for=driver-toolkit)
DRIVER_SOURCE_REPO="https://github.com/enriquebelarte/simple-kmod.git"
DRIVER_SOURCE_DIR=simple-kmod
DRIVER_NAME=simple-kmod

# Substitute strings in templates
sed -e "s#DRIVER_NAME#$DRIVER_NAME#g; s#DRIVER_TOOLKIT_IMAGE#$DRIVER_TOOLKIT_IMAGE#g; s#DRIVER_SOURCE_REPO#$DRIVER_SOURCE_REPO#g; s#DRIVER_SOURCE_DIR#$DRIVER_SOURCE_DIR#g" oc-templates/0001-buildconfig.yaml.template > oc-templates/0001-buildconfig.yaml
sed -e "s#DRIVER_NAME#$DRIVER_NAME#g" oc-templates/0002-drivercontainer.yaml.template > oc-templates/0002-drivercontainer.yaml
